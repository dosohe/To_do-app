<div class="header">
<div class ="container">
  <div class ="logo">Задачи</div>
  <div class ="add_form">
    <%= link_to root_path, id: "add_todo" do %>
      <%= image_tag "addTodoIcon.png", id: "img_todo" %>
    <% end %>
  </div>
</div>
</div>

<section class = "block">
<!-- <div class="container"> -->
   <% @projects.each do |project| %>
 <div class ="col-xs-12 col-sm-12 col-md-6 col-lg-4">
   <div class="card">

    <div class ="pr_name"><%= project.title.upcase() %></div><hr>

          <div class ="todos">
          <ul>
          <% @todos.each do |todo| %>
            <% if todo.project_id == project.id%>

                  <div class="point">
                       <div class = "check"> <input type="checkbox" name="todo" ></div> <div class="text"> <%= todo.text%></div>
                  </div>
            <% end %>
         <% end %>
         </ul>
       </div>
       </div>
     </div>
    <% end %>
</section>


  <div id ="submit_form">
    <%= render "create"%>
  </div>
